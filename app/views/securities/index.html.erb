<h1>Coverage</h1>

<table class="table table-hover">

<thead>
  <tr>
    <th></th>
    <th></th>
    <th colspan = "3" style="border-bottom:1px solid black; text-align:center;">Internal Forecast</th>
    <th></th>

    <td><%= link_to 'Add Security', new_security_path, :class => "btn btn-mini btn-success" %></td>
  </tr>

  <tr>
    <th>Sector Assigment</th>
    <th>Symbol</th>
    <th>Price Target</th>
    <th>Current Year EPS</th>
    <th>Next Year EPS</th>

    <th></th>
    <th></th>
  </tr>
</thead>

<tbody>
<% @securities.each do |security| %>
  <tr>
    <td><%= security.our_sector %></td>
    <td><%= security.symbol %></td>
    <td><%= security.our_price_target %></td>
    <td><%= security.our_current_year_eps %></td>
    <td><%= security.our_next_year_eps %></td>
    <td><%= link_to 'Edit', edit_security_path(security), :class => "btn btn-mini"  %></td>
    <td><%= link_to 'Annihilate', security, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger"  %></td>
  </tr>
<% end %>
</tbody>
</table>