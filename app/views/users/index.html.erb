<h1>Your Current Information</h1>

<% @users.each do |user| %>
  <p>Username:</p>
  <p><%= user.email %></p>
  <p><%= link_to 'Edit My Profile', edit_user_url(user), :class => "btn btn-mini" %></p>
  <p><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to do this? This is completely irreversible!' }, :class => "btn btn-mini" %></p>
<% end %>