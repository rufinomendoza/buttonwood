<h1>Key Indicators</h1>
<% array = [] %>
<% @holdings.each do |holding| %>
<% array << holding.dollar_value %>
<% end %>
<% assets = array.sum %>

<table>
  <tr>
    <th colspan = "3"></th>
    <th colspan = "3" style="border-bottom:1px solid black;">Internal Forecasts</th>
  </tr>

  <tr align=left>
    <th>Sector</th>
    <th>Symbol</th>
    <th>Weight</th>
    <th>Price Target</th>
    <th>Current Year EPS</th>
    <th>Next Year EPS</th>
  </tr>

<% @holdings.each do |holding| %>
  <tr>
    <td><%= holding.our_sector %></td>
    <td><%= holding.symbol %></td>
    <td align=right>
      <% result = holding.dollar_value/assets*100 %>
      <%= holding.percent_dec(result) %>
    </td>
    <td align=right><%= holding.our_price_target %></td>
    <td align=right><%= holding.our_current_year_eps %></td>
    <td align=right><%= holding.our_next_year_eps %></td>
  </tr>
<% end %>

<tr>
  <td><b>Total</b></td>
  <td align=right><b><%= ActionController::Base.helpers.number_to_percentage(assets/assets*100, :precision => 2) %></b></td>
  </tr>

</table>